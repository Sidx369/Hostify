generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  userId        BigInt      @id @default(autoincrement()) // primary key
  email         String      @unique
  name          String
  gitHubProfile String?
  createdAt     DateTime @default(now())
  projects      Project[]
}

enum DeploymentStatus{
  Ready
  Error
  Building
  Queued
  Canceled
}

model Project {
  projectId         BigInt      @id @default(autoincrement())
  projectName       String
  deploymentStatus  DeploymentStatus
  domainUrl         String?   @unique
  githubUrl         String?    
  userId            BigInt  
  user              User @relation(fields: [userId], references: [userId])
  createdAt         DateTime @default(now())
  deployments       Deployment[]
}

model Deployment {
  deploymentId        BigInt      @id @default(autoincrement())
  deploymentDate      DateTime @default(now())
  deploymentStatus    DeploymentStatus
  commitId            String?
  startedAt           DateTime @default(now())
  endedAt             DateTime?    
  sourcePath          String?
  outputPath          String?
  projectId           BigInt  
  project             Project @relation(fields: [projectId], references: [projectId])
  deploymentLogs      DeploymentLog[]
}

enum DeploymentLogStatus{
  Completed
  Error
  Warning
}

model DeploymentLog {
  logId         BigInt      @id @default(autoincrement())
  logMessage    String
  errorMessage  String?
  status        DeploymentLogStatus
  timeStamp     DateTime @default(now())
  deploymentId  BigInt  
  deployment    Deployment @relation(fields: [deploymentId], references: [deploymentId])
}